<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <header class="site-header" style="background-image: url({{ asset('img/background.jpg') }})">
        <span class="site-title">Peters Symfony sida</span>
    </header>

    <body>
        <nav>
            <ul>
                <li><a href="{{ path('home') }}">Home</a></li>
                <li><a href="{{ path('about') }}">About</a></li>
                <li><a href="{{ path('lucky_number') }}">Lucky number</a></li>
                <li><a href="{{ path('report') }}">Redovisning</a></li>
                <li><a href="{{ path('card_home') }}">Cards</a></li>
            </ul>
        </nav>
        <div class="flash-messages">
          {% for label, messages in app.flashes %}
              {% for message in messages %}
                  <div class="flash-{{ label }}">{{ message }}</div>
              {% endfor %}
          {% endfor %}
        </div>
        {% block body %}{% endblock %}
    </body>
    <footer>
        <p>Webmaster: Peter Ekblom</p>
    </footer>
</html>
